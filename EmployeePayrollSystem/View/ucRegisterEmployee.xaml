<UserControl x:Class="EmployeePayrollSystem.View.ucRegisterEmployee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmployeePayrollSystem.View"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             >
    <Grid Background="Azure">
        <Grid.RowDefinitions >
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.95*"/>
           
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.03*"/>
            <ColumnDefinition Width="0"/>

        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Center" FontSize="24">Employee Registration</TextBlock>
        <local:ucEmployee Height="350"  VerticalAlignment="Top" Grid.Row="2" />
    </Grid>
</UserControl>
